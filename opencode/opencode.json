{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "default_agent": "plan",
  "share": "disabled",
  "tui": {
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "edit": "ask",
    "write": "ask",
    "task": "allow",
    "skill": "allow",
    "bash": {
      "*": "ask",
      "git diff *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "fd *": "allow",
      "npm test*": "allow",
      "pnpm test*": "allow",
      "yarn test*": "allow",
      "rm *": "deny",
      "blob *": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny"
    },
    "external_directory": {
      "~/_main/opencode/**": "allow",
      "~/.config/**": "allow",
      "~/.local/share/**": "allow"
    }
  },
  "tools": {
    "chrome-devtools_*": false,
    "clipboard*": true,
    "ast*": true
  },
  "agent": {
    "plan": {
      "permission": {
        "task": "allow",
        "skill": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "codesearch": "allow"
      }
    },
    "build": {
      "permission": {
        "task": "allow",
        "skill": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "codesearch": "allow",
        "bash": {
          "*": "ask",
          "git push *": "deny",
          "git stash *": "deny",
          "git diff *": "allow",
          "grep *": "allow"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": false
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": false
    },
    "n8n-mcp": {
      "type": "local",
      "command": ["npx", "n8n-mcp"],
      "environment": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_API_URL": "{env:N8N_API_URL}",
        "N8N_API_KEY": "{env:N8N_API_KEY}"
      },
      "enabled": false
    },
    "kubernetes": {
      "type": "local",
      "command": ["npx", "-y", "kubernetes-mcp-server@latest"],
      "enabled": false
    },
    "aws-documentation-mcp-server": {
      "type": "local",
      "command": ["uvx", "awslabs.aws-documentation-mcp-server@latest"],
      "enabled": false
    },
    "aws-knowledge-mcp-server": {
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws",
      "enabled": false
    },
    "slack": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "slack-mcp-server@latest",
        "--transport",
        "stdio"
      ],
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    }
  }
}
