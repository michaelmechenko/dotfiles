{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "default_agent": "plan",
  "share": "disabled",
  "tui": {
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "ask",
      "git diff *": "allow",
      "git status *": "allow",
      "rm *": "deny",
      "grep *": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny"
    },
    "external_directory": {
      "~/_main/*": "ask",
      "~/_main/opencode/*": "allow",
      "~/.config/*": "ask",
      "~/.config/opencode/*": "allow"
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "*": "ask",
          "git push *": "deny",
          "git stash *": "deny",
          "git diff *": "allow",
          "grep *": "allow"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/context7"],
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": false
    }
  }
}
