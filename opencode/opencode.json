{
	"$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "default_agent": "plan",
  "share": "disabled",
    "tui": {
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": true
    }
  },
	"mcp": {
		"context7": {
			"type": "local",
			"command": ["docker", "run", "-i", "--rm", "mcp/context7"],
			"enabled": false
		},
		"git": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"--rm",
				"-i",
				"--mount",
				"type=bind,src=/Users/mishka,dst=/Users/mishka",
				"mcp/git"
			],
			"enabled": false
		},
		"github": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"-e",
				"GITHUB_PERSONAL_ACCESS_TOKEN={env:GIT_MCP_TOKEN}",
				"-e",
				"GITHUB_READ_ONLY=1",
				"mcp/github"
			],
			"enabled": false
		},
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false,
    }
	}
}
